{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="container">
        <h1>Cat√©gories</h1>

        <div class="row custom-line">
            {% for category in categories %}
                <div class="col-sm-10 col-md-6 col-lg-4 mt-4 mb-4 ">
                    <div class="card h-100 px-3">
                                <div class="card-header bg-transparent border-dark">
                                    {{ category.name }}
                                </div>
                        <div class="card-body text-primary">
                            <img src="{{ vich_uploader_asset(category) }}" class="card-img-top" alt="{{ category.name }}
                        </div>
                        <div class="card-footer bg-transparent border-dark">
                            <br><a href="{{ path('app_product_category', {id: category.id }) }}"
                                   class="stretched-link"></a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="d-flex justify-content-center mt-3 mb-5">
        </div>
    </div>
{% endblock %}
